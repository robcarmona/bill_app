<div class="col-xs-12">

  <div class="row">
    <div class="col-xs-12">
      <div class="col-xs-6">
        <h1>Accounts</h1>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-12">
        <div class="col-xs-12">
          <%= link_to "Add",
                      "#",
                      :class => "btn btn-success btn-row pull-right",
                      :id => "js-add-btn",
                      :onclick => "accounts.addBtnOnClick();" %>
        </div>
      </div>
    </div>

    <%= form_for :account, :html => { :id => "js-account-form" } do |f| %>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <div class="form-group">
            <%= f.text_field :name, class: "form-control",  placeholder: "name" %>
          </div>
        </div>
        <div class="col-md-6 col-md-offset-3">
          <div class="form-group">
            <%= f.text_area :description, class: "form-control",  placeholder: "description" %>
          </div>
        </div>

        <div class="col-md-6 col-md-offset-3">
          <div class="form-group">
            <%= f.submit 'Save', :class => 'btn btn-primary pull-right btn-group' %>
            <%= link_to "Cancel", "#", :class => "btn btn-danger pull-right btn-group", :onclick => "accounts.cancelBtnOnClick();" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="row">
    <div class="col-xs-12">
      <table class="table table-striped table-bordered dt-responsive nowrap table-hover" cellspacing="0">
        <thead class="table-header">
        <tr>
          <th>Name</th>
          <th>Description</th>
        </tr>
        </thead>
        <tbody class="table-striped table-hover">
          <% current_user.accounts.each do | account | %>
            <tr>
              <td><%= account.name %></td>
              <td><%= account.description %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

</div>
