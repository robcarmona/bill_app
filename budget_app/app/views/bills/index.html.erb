<div class="col-xs-12">

  <div class="row">
    <div class="col-xs-12">
      <div class="col-xs-6">
        <h1>Bills</h1>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-12">
        <div class="col-xs-12">
          <%= link_to "Add",
                      "#",
                      :class => "btn btn-success btn-row pull-right",
                      :id => "js-add-btn",
                      :onclick => "bills.addBtnOnClick();" %>
        </div>
      </div>
    </div>

    <%= form_for :bill, :html => { :id => "js-bill-form" } do |f| %>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <div class="col-xs-6 col-md-6">
            <div class="form-group">
              <%= f.text_field :name, class: "form-control",  placeholder: "Name" %>
            </div>
          </div>
          <div class="col-xs-6 col-md-6">
            <div class="form-group">
              <%= f.text_field :url, class: "form-control",  placeholder: "Payment Url" %>
            </div>
          </div>
        </div>
        <div class="col-md-6 col-md-offset-3">
          <div class="col-xs-6 col-md-6">
            <div class="form-group">
              <%= f.text_field :due, class: "form-control",  placeholder: "Amount Due" %>
            </div>
          </div>
          <div class="col-xs-6 col-md-6">
            <div class="form-group">
              <%= f.text_field :username, class: "form-control",  placeholder: "Portal Username" %>
            </div>
          </div>
        </div>

        <div class="col-md-6 col-md-offset-3">
          <div class="col-xs-6 col-md-6">
            <div class="form-group">
              <%= f.text_field :alert_within, class: "form-control",  placeholder: "Days Alert Within" %>
            </div>
          </div>
          <div class="col-xs-6 col-md-6">
            <div class="form-group">
              <%= f.text_field :balance, class: "form-control",  placeholder: "Remaining Balance" %>
            </div>
          </div>
        </div>

        <div class="col-md-6 col-md-offset-3">
          <div class="col-xs-6 col-md-6">
            <div class="form-group">
              <label>
                Auto Withdraw
                <%= f.check_box :auto_withdraw %>
              </label>
            </div>
          </div>
        </div>

        <div class="col-md-6 col-md-offset-3">
          <div class="form-group">
            <%= f.submit 'Save', :class => 'btn btn-primary pull-right btn-group' %>
            <%= link_to "Cancel", "#", :class => "btn btn-danger pull-right btn-group", :onclick => "bills.cancelBtnOnClick();" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="row">
    <div class="col-xs-12">
      <table class="table table-striped table-bordered dt-responsive nowrap table-hover" cellspacing="0">
        <thead class="table-header">
        <tr>
          <th>Name</th>
          <th>Actions</th>
        </tr>
        </thead>
        <tbody class="table-striped table-hover">
          <% current_user.bills.each do | bill | %>
            <tr>
              <td><%= bill.name %></td>
              <td><%= link_to "<span class='glyphicon glyphicon-remove'></span>".html_safe, bill_path(bill), method: :delete  %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

</div>
